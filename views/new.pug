extends layout

block content
  form(method="post", action="/shopping_lists").my-3
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="shopping_list_Name") お買いものリスト名
      input(type="text" name="shopping_list_Name")#shopping_list_Name.form-control
    div.form-group
      label(for="memo") メモ
      textarea(name="memo")#memo.form-control
    div.form-group
      label(for="candidates") お買いものするもの (改行して複数入力してください)
      textarea(name="candidates" rows="4")#candidates.form-control
    button(type="submit").btn.btn-info お買いものリストをつくる